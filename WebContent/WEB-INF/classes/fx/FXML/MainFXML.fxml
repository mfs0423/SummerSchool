<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fx.controller.ManuController">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="What do you want to do ?">
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
         <font>
            <Font size="25.0" />
         </font>
      </Text>
      <Button fx:id="addCourse" mnemonicParsing="false" onAction="#addCourse" text="Add a Course">
         <font>
            <Font size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
      </Button>
      <Button fx:id="removeCourse" mnemonicParsing="false" onAction="#removeCourse" text="Remove a Course">
         <font>
            <Font size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
      </Button>
      <Button fx:id="addStudent" mnemonicParsing="false" onAction="#addStudent" text="Add a Student">
         <font>
            <Font size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
      </Button>
      <Button fx:id="enroll" mnemonicParsing="false" onAction="#enroll" text="Enroll a Student in a Course">
         <font>
            <Font size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
      </Button>
      <Button fx:id="unEnroll" mnemonicParsing="false" onAction="#unEnroll" text="Un-enroll a Student from a Course">
         <font>
            <Font size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
      </Button>
      <Button fx:id="listCourses" mnemonicParsing="false" onAction="#listCourses" text="List Courses given a student first name and last name">
         <font>
            <Font size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </Button>
      <Button fx:id="listStudents" mnemonicParsing="false" onAction="#listStudents" text="List Students given a course name">
         <font>
            <Font size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="30.0" top="20.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
